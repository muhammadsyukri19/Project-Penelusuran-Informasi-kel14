{
  "info": {
    "name": "Search Engine API - Indonesian Football News",
    "description": "API untuk search engine berita sepak bola Indonesia menggunakan TF-IDF dan BM25",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1. Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:5000/api/health",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "health"]
        },
        "description": "Cek status API dan search engines"
      }
    },
    {
      "name": "2. Search - TF-IDF",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"query\": \"timnas indonesia\",\n  \"algorithm\": \"tfidf\",\n  \"limit\": 5\n}"
        },
        "url": {
          "raw": "http://localhost:5000/api/search",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "search"]
        },
        "description": "Search menggunakan algoritma TF-IDF"
      }
    },
    {
      "name": "3. Search - BM25",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"query\": \"persib bandung\",\n  \"algorithm\": \"bm25\",\n  \"limit\": 5\n}"
        },
        "url": {
          "raw": "http://localhost:5000/api/search",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "search"]
        },
        "description": "Search menggunakan algoritma BM25"
      }
    },
    {
      "name": "4. Compare TF-IDF vs BM25",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"query\": \"shin tae yong\",\n  \"limit\": 10\n}"
        },
        "url": {
          "raw": "http://localhost:5000/api/search/compare",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "search", "compare"]
        },
        "description": "Bandingkan hasil TF-IDF vs BM25"
      }
    },
    {
      "name": "5. Get Document by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:5000/api/document/0",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "document", "0"]
        },
        "description": "Ambil detail dokumen lengkap berdasarkan ID"
      }
    },
    {
      "name": "6. Get Statistics",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:5000/api/stats",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "stats"]
        },
        "description": "Statistik corpus: total dokumen, sumber, algoritma"
      }
    },
    {
      "name": "7. Get All Documents (JSON)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:5000/api/documents?page=1&per_page=10",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "documents"],
          "query": [
            {
              "key": "page",
              "value": "1",
              "description": "Page number (default: 1)"
            },
            {
              "key": "per_page",
              "value": "10",
              "description": "Documents per page (default: 10, max: 100)"
            }
          ]
        },
        "description": "Get all documents in JSON format with pagination"
      }
    }
  ]
}
